/* pages/application/application.wxss */

/* 头部的黑条（出于美观） */
.application-head-bar {
  /* 和 page/index/index.wxss 保持一致 */
  height: calc(var(--mid-gap) + var(--max-gap));
  width: 750rpx;
  background: #3CB371;
}

/* 应用 */
.applications-applications {
  display: grid;
  grid-template-columns: repeat(
    auto-fit, minmax(var(--min-applications-item-width), 1fr)
  );
  grid-gap: var(--min-gap);
  box-sizing: border-box;
  align-items: center;
  width: calc(100% - 2 * var(--mid-gap));
  margin: var(--mid-gap);
  padding: var(--min-gap);
  border-radius: var(--mid-gap);
  background-color: #F5F5F5;
}

.applications-applications-title {
  grid-column: 1 / -1;
  text-align: center;
}

.applications-applications-item {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: var(--min-gap);
  background-color: white;
  text-align: center;
}

.applications-applications-item-pic {
  width: var(--pic-gap);
  height: var(--pic-gap);
  margin: var(--min-gap);
}

.applications-applications-item-text {
  margin: var(--min-gap);
  font-size: small;
}

